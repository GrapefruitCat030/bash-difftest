{
    "llm": {
        "provider": "openai",
        "model": "gpt-4-turbo",
        "max_tokens": 4096,
        "temperature": 0.2,
        "rate_limit_per_minute": 6,
        "api_key": "YOUR_API_KEY"
    },
    "prompt_engine": {
        "template_dir": "src/prompt/templates",
        "docs_dir": "corpus/docs",  
        "examples_dir": "corpus/examples"  
    },
    "corpus_path": "corpus",
    "features": [
        "Array",
        "ProcessSubstitution"
    ],
    "seeds": "seeds",
    "results": {
        "mutators": "src/mutation_chain/mutators",
        "posix_code": "results/posix_code",
        "reports": "results/reports"
    },
    "shell_sourcecode_path": "shell",
    "bash_path": "shell/bin/bash",
    "posix_path": "shell/bin/sh",
    "timeout": 5,
    "validation": {
        "validate_examples_dir": "corpus/examples",
        "bash_path": "bin/bash",
        "posix_path": "bin/sh",
        "max_validation_attempts": 3,
        "timeout": 5
    }
}